{
  "name": "tommy",
  "description": "Cross platform app store for desktop",
  "version": "0.0.4",
  "license": "MIT",
  "author": "Ozgur Ozer <ozgr@live.com>",
  "main": "./src/backend/electron.js",
  "scripts": {
    "dev": "concurrently \"npm:start-parcel\" \"npm:start-electron\" -c \"green,blue\"",
    "start-parcel": "parcel ./src/frontend/html/app.html --out-dir ./public --public-url / --port 1240",
    "start-electron": "electron .",
    "build": "npm run build-parcel && npm run build-electron",
    "prebuild-parcel": "rm -rf ./public/*",
    "build-parcel": "parcel build ./src/frontend/html/app.html --out-dir ./public --public-url ./",
    "build-electron": "electron-builder -mwl && npm run release",
    "release": "npm run release:mac && npm run release:windows && npm run release:linux",
    "prerelease:mac": "rm -rf ./releases/$npm_package_version/mac && mkdirp ./releases/$npm_package_version/mac",
    "release:mac": "cp -R ./dist/*.dmg ./releases/$npm_package_version/mac/$npm_package_name-$npm_package_version.dmg",
    "prerelease:windows": "rm -rf ./releases/$npm_package_version/windows && mkdirp ./releases/$npm_package_version/windows",
    "release:windows": "cp -R ./dist/*.exe ./releases/$npm_package_version/windows/$npm_package_name-$npm_package_version.exe",
    "prerelease:linux": "rm -rf ./releases/$npm_package_version/linux && mkdirp ./releases/$npm_package_version/linux",
    "release:linux": "cp -R ./dist/*.deb ./releases/$npm_package_version/linux/$npm_package_name-$npm_package_version.deb",
    "postrelease": "rm -rf ./dist",
    "icomoon": "node ./src/scripts/icomoon.js"
  },
  "build": {
    "publish": null,
    "appId": "com.ozgrozer.tommy",
    "files": [
      "./apps.json",
      "./src/backend/**/*",
      "./src/common/**/*",
      "./public/**/*"
    ],
    "mac": { "target": [{ "target": "dmg", "arch": ["x64"] }] },
    "win": { "target": [{ "target": "nsis", "arch": ["x64"] }] },
    "linux": { "target": [{ "target": "deb", "arch": ["x64"] }] }
  },
  "dependencies": {
    "adm-zip": "^0.5.1",
    "electron-is-dev": "^1.2.0",
    "electron-store-data": "^1.0.3",
    "is-electron": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-root-import": "^6.6.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^5.3.0",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "mkdirp": "^1.0.4",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "parcel-bundler": "^1.12.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "standard": "^16.0.3"
  }
}
