{
  "name": "tommy",
  "description": "",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./src/electron.js",
  "scripts": {
    "dev": "concurrently \"npm:start-parcel\" \"npm:start-express\" -c \"green,blue\"",
    "start-electron": "electron .",
    "start-parcel": "parcel ./src/frontend/js/App.jsx --out-dir ./public --public-url / --port 1241",
    "start-express": "nodemon --ignore .cache/ --ignore dist/ --ignore node_modules/ ./src/backend/server.js",
    "build": "npm run build-parcel && npm run build-electron",
    "build-parcel": "parcel build ./src/frontend/js/App.jsx --out-dir ./public --public-url ./",
    "prebuild-parcel": "rm -rf ./public/*",
    "build-electron": "electron-builder -m && npm run release",
    "release": "npm run release:mac",
    "prerelease:mac": "rm -rf ./releases/$npm_package_version/mac && mkdirp ./releases/$npm_package_version/mac",
    "release:mac": "cp -R ./dist/*.dmg ./releases/$npm_package_version/mac/$npm_package_name-$npm_package_version.dmg",
    "prerelease:windows": "rm -rf ./releases/$npm_package_version/windows && mkdirp ./releases/$npm_package_version/windows",
    "release:windows": "cp -R ./dist/*.exe ./releases/$npm_package_version/windows/$npm_package_name-$npm_package_version.exe",
    "postrelease": "rm -rf ./dist",
    "icomoon": "node ./src/scripts/icomoon.js"
  },
  "build": {
    "publish": null,
    "appId": "com.ozgrozer.tommy",
    "files": [
      "./electron.js",
      "./node_modules",
      "./public/**/*"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "pug": "^3.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-root-import": "^6.6.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^5.3.0",
    "electron": "^11.0.4",
    "electron-builder": "^22.9.1",
    "mkdirp": "^1.0.4",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "parcel-bundler": "^1.12.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "standard": "^16.0.3"
  }
}
